{
    "compilerOptions": {
        "module": "Node16",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./out",
        "paths": {
            "@pages/*": ["./src/pages/*"],
            "@desktop-pages/*": ["./src/pages/desktop/*"],
            "@mobile-pages/*": ["./src/pages/mobile/*"],
            "@fixtures/*": ["./src/fixtures/*"]
        }
    },
    "include": ["src/**/*.ts", "global*"],
    "exclude": ["**/*.spec.ts"]
}
